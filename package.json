{
  "name": "alo-quick-loan",
  "version": "1.0.0",
  "description": "ALO Quick Loan Application - Full Stack",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start:dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "install": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "start": "cd backend && npm run start:prod",
    "start:prod": "npm run start",
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm run test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "db:setup": "cd backend && npm run db:setup",
    "db:migrate": "cd backend && npm run migration:run",
    "db:seed": "cd backend && npm run seed:run"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/alo-quick-loan.git"
  },
  "keywords": [
    "loan",
    "fintech",
    "nestjs",
    "react",
    "typescript"
  ],
  "author": "ALO Quick Loan Team",
  "license": "UNLICENSED"
}
