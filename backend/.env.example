# Application
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/alo_quick_loan
# Alternative: For MongoDB Atlas or other cloud providers
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/alo_quick_loan?retryWrites=true&w=majority
DB_HOST=localhost
DB_PORT=27017
DB_DATABASE=alo_quick_loan

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=7d

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_TITLE=ALO Quick Loan API
SWAGGER_DESCRIPTION=API documentation for ALO Quick Loan backend
SWAGGER_VERSION=1.0
SWAGGER_PREFIX=api-docs

# Frontend URL
FRONTEND_URL=http://localhost:8080

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Twilio Configuration (for SMS OTP)
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890  # Your Twilio phone number with country code
